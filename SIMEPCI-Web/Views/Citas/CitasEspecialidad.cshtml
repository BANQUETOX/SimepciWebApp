@{
    ViewData["Title"] = "Citas por Especialidad";
}
@{
    Layout = "../Shared/_Layout.cshtml";
}
@section Scripts {
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js'></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/pages/citas/registrarcita.js"></script>
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="~/css/Pages/Citas/CitasEspecialidad.css" />
</head>
<main class="container">
    <h2>Seleccione la especialidad y la sede</h2>
    <p id="textoCorreo">Ingrese el correo del Paciente para registrar una cita</p>
    <div id="campoCorreo">
        <label for="correoUsuario">Correo:</label>
        <input type="email" id="correoUsuario">
    </div>
    <div id="campoNombre">
        <label for="nombreUsuario">Nombre Paciente:</label>
        <input type="text" readonly="readonly" id="nombreUsuario">
    </div>
    <button class="btn btn-secondary" id="btnBuscar">Buscar Paciente</button>
    <div>
        <label for="sede">Elija la Sede:</label>
        <div id="sede"></div>
    </div>
    <div>
        <label for="especialidad">Especialidades disponibles:</label>
        <div id="especialidad"></div>
    </div>
    <button id="btnCuposDisponiblesDoctor">ver cupos</button>
    <button id="btnCuposDisponiblesPaciente">ver cupos</button>
    <div id="calendarioDisponible" class="mt-4">
    </div>
</main>