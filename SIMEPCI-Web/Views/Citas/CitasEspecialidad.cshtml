@{
    ViewData["Title"] = "Citas por Especialidad";
}
@{
    Layout = "../Shared/_Layout.cshtml";
}
@section Scripts {
    <script src="~/js/pages/citas/registrarcita.js"></script>
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="~/css/Pages/Citas/CitasEspecialidad.css" />
</head>
<main>
    <h2>Seleccione la especialidad y la sede</h2>

    <form>
        <div>
            <label for="especialidad">Elija la Especialidad:</label>
            <div id="especialidad"></div>
        </div>
        <div>
            <label for="sede">Elija la Sede:</label>
            <div id="sede"></div>
        </div>

        <div>
            <label for="mes">Mes:</label>
            <input type="number" id="mes" name="mes" min="1" max="12" required>
        </div>

        <div>
            <label for="dia">Día:</label>
            <input type="number" id="dia" name="dia" min="1" max="31" required>
        </div>

        <div>
            <label for="hora">Hora:</label>
            <input type="number" id="hora" name="hora" min="0" max="23" required>
        </div>

        <button type="submit">Enviar</button>
    </form>
</main>