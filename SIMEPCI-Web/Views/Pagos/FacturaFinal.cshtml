@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {

    
    <script src="~/js/pages/Pagos/FacturaFinal.js"></script>
   
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/pages/Pagos/Paypal.css"></link>
</head>
<body>

    <div class="banner-container">
        <img class="banner-image" src="/imgs/Pagos/Banner.jpg" alt="Banner" />
    </div>

    <div class="factura">

        <div class="encabezado">
            <h3>Factura</h3>
            <p>Fecha: <span id="fecha">[Fecha]</span></p>
            <p>Número de Factura: <span id="numeroFactura">[Número de Factura]</span></p>
            <p>Cliente: <span id="cliente">[Nombre del Cliente]</span></p>
        </div>


        <div class="desglose">
            <h6>Desglose de Productos</h6>
            <table>
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody id="desgloseProductos">
                </tbody>
            </table>
        </div>


        <div class="desglose">
            <p>Subtotal: <span id="subtotal"></span></p>
            <p>Impuesto de servicio: <span id="impuestoSevicio"></span></p>
            <p>IVA: <span id="iva"></span></p>
        </div>


        <div class="total">
            <p>Total: ₡<span id="total">[Total]</span></p>
        </div>
    </div>
    <div>
        <h3> Ayúdenos a mejorar</h3>
        <button class="boton" onclick="window.location.href = '../Pagos/Encuesta'">Llenar Encuesta</button>
    </div> 

</body>
</html>
