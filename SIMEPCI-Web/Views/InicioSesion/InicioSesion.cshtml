@{
    Layout = "../Shared/_Layout.cshtml";
}
@section Scripts {
    <script src="~/js/pages/iniciosesion/iniciosesion.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Krub:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
    <link href="~/css/pages/iniciosesion/iniciosesion.css" rel="stylesheet" />
</head>
<body>
    <div class="centrar">
        <div class="seccionForm mt-5 mb-5">
            <div>
                <img src="~/imgs/iniciosesion/iniciarsesion.png" />
            </div>
            <div>
                <div>
                    <h5>Bienvenido a Hospital Su Salud Primero</h5>
                    <h5>Iniciar Sesión</h5>
                    <div>
                        <label>Correo</label>
                        <input type="email" id="txtEmail" class="form-control" placeholder="correo@dominio.com" />
                    </div>
                    <div>
                        <label>Contraseña</label>
                        <input type="password" id="txtPassword" class="form-control" />
                    </div>
                </div>
                <li class="liStyle">
                    <a asp-area="" asp-controller="Home" asp-action="Index">¿Olvidó su contraseña?</a>
                </li>
                <div class="seccionButtons">
                    <div>
                        <button type="submit" id="btnIniciarSesion" class="btn btn-primary">Iniciar Sesión</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="centrar seccionButtonReg">
        <li class="liStyle p-2 bd-highlight">
            <a asp-area="" asp-controller="Home" asp-action="Index">¿No posee una cuenta?</a>
        </li>
        <button type="button" class="btn btn-primary p-2 bd-highlight">Regístrese aquí</button>
    </div>
</body>