@model List<SIMEPCI_Web.Controllers.HistorialCita>

@{
    Layout = "../Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/HistorialCitas.css" rel="stylesheet" />
</head>

<div class="container">
    <h2>Historial de citas</h2>

    <div class="menu">
        <a href="@Url.Action("Index", "HistorialCitas")" class="menu-item active">Registro de citas</a>
        <a href="@Url.Action("Pagos", "HistorialCitas")" class="menu-item">Pagos</a>
        <a href="@Url.Action("DashboardDoctor", "HistorialCitas")" class="menu-item">Dashboard Doctor</a>
    </div>

    <div class="content">
        <table class="table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Procedimiento</th>
                    <th>Doctor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cita in Model)
                {
                    <tr>
                        <td>@cita.Fecha.ToString("dd/MM/yyyy - hh:mm tt")</td>
                        <td>@cita.Procedimiento</td>
                        <td>@cita.Doctor</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="pagination">
        @if (ViewBag.PaginaActual > 1)
        {
            <a href="@Url.Action("Index", new { pagina = ViewBag.PaginaActual - 1 })" class="pagination-item">&lt;&lt; Prev</a>
        }

        @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
        {
            <a href="@Url.Action("Index", new { pagina = i })" class="pagination-item @(i == ViewBag.PaginaActual ? "active" : "")">@i</a>
        }

        @if (ViewBag.PaginaActual < ViewBag.TotalPaginas)
        {
            <a href="@Url.Action("Index", new { pagina = ViewBag.PaginaActual + 1 })" class="pagination-item">Next &gt;&gt;</a>
        }
    </div>
</div>