@model List<SIMEPCI_Web.Controllers.Receta>

@{
    ViewData["Title"] = "Recetas médicas";
}

<link rel="stylesheet" href="~/css/Pages/Recetas/VisualizarRecetas.css" />

<h2>Recetas médicas: 1 1710 9842</h2>

<div class="recetas-container">
    @foreach (var receta in Model)
    {
        <div class="receta-card">
            <img src="~/imgs/VisualizarReceta/pastillas.png" alt="Pastillas">
            <h3>@receta.Nombre</h3>
            <p>Fecha de emisión: @receta.FechaEmision.ToString("dd/MM/yyyy")</p>
            <p>Dosis recomendadas: @receta.Dosis</p>
            <p>Duración del tratamiento: @receta.Duracion</p>
            <p>Observaciones: @receta.Observaciones</p>
        </div>
    }
</div>