@{
    Layout = "../Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/pages/Recetas/RegistrarReceta.js"></script>
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="~/css/pages/recetas/registrarreceta.css" rel="stylesheet" />
</head>
<body>

    <div class="banner-container">
        <img class="banner-image" src="/imgs/Recetas/banner.jpg" alt="Banner" />
    </div>


    <div class="row form-container">
        <div class="col-md-6 mx-auto">
            <form method="post">
                <div class="form-group">
                    <label for="correo">Correo del paciente: </label>
                    <input class="form-control" id="correo" type="text" required />
                </div>
                <div class="form-group">
                    <label for="medico">Médico: </label>
                    <input class="form-control" id="medico" type="text" required />
                </div>
                <div class="form-group">
                    <label for="txtNombreMedicamento">Nombre del Medicamento: </label>
                    <input id="txtNombreMedicamento" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="txtDosis">Dosis Recomendada: </label>
                    <input id="txtDosis" class="form-control" type="text" />
                </div>
                <div class="form-group">
                    <label for="txtDuracionTratamiento">Duracion del tratamiento en días: </label>
                    <input type="text" id="txtDuracionTratamiento" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="txtRecomendacionesAdicionales">Recomendaciones adicionales: </label>
                    <textarea id="txtRecomendacionesAdicionales" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="recetaFisica">Receta Física: </label>
                    <div class="d-flex justify-content-center">

                        <button id="btnCargarImagen" type="button" class="b">Cargar Imagen</button>
                    </div>
                    <input id="recetaFisica" class="form-control" type="hidden" />
                </div>
                <div class="form-group mt-3 d-flex justify-content-center">

                    <button id="btnRegistrar" type="button" class="b">Registrar</button>
                </div>
            </form>
        </div>
    </div>
</body>