@{
    Layout = "../Shared/_Layout.cshtml";
}

@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/pages/gestion/gestionsedes.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAiOxdTI0JZvtyoLKxCzmuaVHcU6uK5WHg&callback=initMap" async defer></script>

    <script>
        $(document).ready(function () {
            $('.container .row').on('click', '.btn-editar', function () {
                $('#btnRegistrar').hide(); 
                $('#btnPrueba').show(); 
                $('#registroModal').modal('show'); 
            });

            $('#registroModal').on('hidden.bs.modal', function () {
                $('#btnRegistrar').show(); 
                $('#btnPrueba').hide(); 
            });
        });
    </script>
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de sedes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/pages/Gestion/GestionFuncionarios.css"></link>

    <style>
        .form-group {
            margin-bottom: 10px;
        }

        .btn-primary {
            margin-top: 10px;
            display: block;
        }
    </style>

</head>
<body>

    <div class="banner-container">
        <img class="banner-image" src="/imgs/Gestion/banner.jpg" alt="Banner" />
        <div class="banner-text">
            <h1>Bienvenido a gestión de sedes</h1>
        </div>
    </div>

    <div class="container">
        <div class="botonRegistrar">
            <div>
                <button type="button" class="btn btn-success b-color2" data-bs-toggle="modal" data-bs-target="#registroModal">Registrar Sede</button> 
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Información de la Sede Registrada</h5>
                        <p class="card-text">
                            <strong>Nombre:</strong> <span id="sedeNombre"></span><br>
                            <strong>Descripción:</strong> <span id="sedeDescripcion"></span><br>
                            <strong>Fecha de Creación:</strong> <span id="sedeFechaCreacion"></span><br>
                            <strong>Provincia:</strong> <span id="sedeProvincia"></span><br>
                            <strong>Cantón:</strong> <span id="sedeCanton"></span><br>
                            <strong>Distrito:</strong> <span id="sedeDistrito"></span><br>
                            <strong>Ubicación:</strong> <span id="sedeUbicacion"></span><br>

                            <button type="button" class="btn btn-primary mx-2 b-color1 btn-editar" >Editar</button>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="registroModal" tabindex="-1" aria-labelledby="registroModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="registroModalLabel">Configuración de Sede</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="sedesForm">
             

                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="nombre">
                        </div>
                        <div class="mb-3">
                            <label for="descripcion" class="form-label">Descripción</label>
                            <textarea class="form-control" id="descripcion" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="fechaCreacion" class="form-label">Fecha de Creación</label>
                            <input type="date" class="form-control" id="fechaCreacion">
                        </div>
                        <div class="mb-3">
                            <label for="provincia" class="form-label">Provincia</label>
                            <input type="text" class="form-control" id="provincia">
                        </div>
                        <div class="mb-3">
                            <label for="canton" class="form-label">Cantón</label>
                            <input type="text" class="form-control" id="canton">
                        </div>
                        <div class="mb-3">
                            <label for="distrito" class="form-label">Distrito</label>
                            <input type="text" class="form-control" id="distrito">
                        </div>
                        <div class="mb-3">
                            <label for="direccion" class="form-label">Ubicación</label>
                            <input type="hidden" class="form-control" id="ubicacion" name="ubicacion">
                            <div id="mapa" style="height: 300px;"></div>
                        </div>
                        

                        <div class="form-group">
                            <label for="registroSedes"></label>
                            <div class="d-flex justify-content-center">

                                <button id="btnCargarImagen" type="button" class="btn btn-primary">Cargar imagen</button>
                            </div>
                            <input id="registroSedes" class="form-control" type="hidden" />
                        </div>
                        <div class="d-flex justify-content-center">
                        <button id="btnRegistrar" type="submit" class="btn btn-primary">OK</button>

                            <button id="btnConfirmar" type="submit" class="btn btn-primary btn-confirmar" style="display: none;">Confirmar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</body>
</html>



