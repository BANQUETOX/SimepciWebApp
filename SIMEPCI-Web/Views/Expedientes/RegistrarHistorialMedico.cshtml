@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/pages/Expedientes/RegistrarHistorialMedico.js"></script>
}

<head>
    <link href="~/css/Pages/Expedientes/RegistrarHistorialMedico.css" rel="stylesheet" />
</head>

<div class="banner-container">
    <img class="banner-image" src="/imgs/Expediente/registrohistorialmedico.jpg" alt="Banner" />
</div>

<div class="container">
    <div id="cuadroFormulario" class="form-container">
        <form id="historialMedicoForm" class="form">
            <div class="form-group d-flex align-items-center">
                <label for="correoPaciente" class="mr-2">Correo del Paciente:</label>
                <input type="text" id="correoPaciente" name="correoPaciente" class="form-control">
                <button type="submit" id="buscarPacienteBtn" class="btn btn-primary ml-2">Buscar</button>
            </div>
        </form>
    </div>

    <div id="historialMedicoContainer" class="form-container" style="display: none;">
        <h3>Registrar Antecedente Medico</h3>
        <form id="registrarHistorialMedicoForm" class="form">
            <div class="form-group">
                <label for="contenido">Contenido:</label>
                <textarea id="contenido" name="contenido" class="form-control" rows="5"></textarea>
            </div>
            <button type="submit" id="registrarHistorialMedicoBtn" class="btn btn-primary">Registrar</button>
        </form>
    </div>
</div>