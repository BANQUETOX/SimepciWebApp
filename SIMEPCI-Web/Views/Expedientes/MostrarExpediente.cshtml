@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/pages/Expedientes/MostrarExpediente.js"></script>
}

<head>
    <link href="~/css/Pages/ExamenesMedicos/ResultadosEnfermera.css" rel="stylesheet" />
</head>

<div class="banner-container">
    <img class="banner-image" src="/imgs/Expediente/mostrarexpediente.jpg" alt="Banner" />
</div>

<div class="container">
    <div class="form-container">
        <form id="examenForm" class="form">
            <div class="form-group d-flex align-items-center">
                <label for="correoPaciente" class="mr-2">Correo del Paciente:</label>
                <input type="text" id="correoPaciente" name="correoPaciente" class="form-control">
                <button type="submit" id="buscarExpedienteBtn" class="btn btn-primary ml-2">Buscar Expediente</button>
            </div>
        </form>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <h4>Información del Expediente</h4>
            <div class="form-group">
                <label for="notasEnfermeria">Notas de Enfermería:</label>
                <textarea id="notasEnfermeria" class="form-control" rows="3" readonly></textarea>
                <button type="button" class="btn btn-primary btn-sm mt-2 edit-btn" data-field="notasEnfermeria">Editar</button>
            </div>
            <div class="form-group">
                <label for="notasMedicas">Notas Médicas:</label>
                <textarea id="notasMedicas" class="form-control" rows="3" readonly></textarea>
                <button type="button" class="btn btn-primary btn-sm mt-2 edit-btn" data-field="notasMedicas">Editar</button>
            </div>
            <div class="form-group">
                <label for="historialMedico">Historial Médico:</label>
                <textarea id="historialMedico" class="form-control" rows="3" readonly></textarea>
                <button type="button" class="btn btn-primary btn-sm mt-2 edit-btn" data-field="historialMedico">Editar</button>
            </div>
        </div>
    </div>
</div>
