@model SIMEPCI_Web.Controllers.Expediente

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/Pages/Expediente/MostrarExpediente.css" rel="stylesheet" />
</head>

<div class="container">
    <h1>Detalles del Expediente</h1>

    <div class="row">
        <div class="col-md-6">
            <h4>Información del Paciente</h4>
            <p><strong>Nombre:</strong> @Model.Nombre</p>
            <p><strong>Fecha de Nacimiento:</strong> @Model.FechaNacimiento.ToShortDateString()</p>
            <p><strong>Dirección:</strong> @Model.Direccion</p>
            <p><strong>Diagnóstico:</strong> @Model.Diagnostico</p>
        </div>
        <div class="col-md-6">
            <h4>Notas Médicas</h4>
            <p>@Model.NotasMedicas</p>
            <h4>Notas de Enfermería</h4>
            <p>@Model.NotasEnfermeria</p>
            <h4>Antecedentes</h4>
            <p>@Model.Antecedentes</p>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </div>
</div>
